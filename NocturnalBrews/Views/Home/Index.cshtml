    <script src="~/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Summernote -->
    <script src="~/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.js"></script>


    <script>
        let cart = [];

        function loadSizes(productName) {
            $.get(`/Home/GetSizes?productName=${encodeURIComponent(productName)}`, function (sizes) {
                const selectId = `sizeSelect-${productName.replace(" ", "-")}`;
                const select = document.getElementById(selectId);
                select.innerHTML = '<option value="">Choose size...</option>';
                sizes.forEach(s => {
                    select.innerHTML += `<option value="${s.size}">${s.size}</option>`;
                });
            });
        }

        function updatePrice(productName) {
            const sizeSelect = document.getElementById(`sizeSelect-${productName.replace(" ", "-")}`);
            const size = sizeSelect.value;
            if (size) {
                $.get(`/Home/GetPrice?productName=${encodeURIComponent(productName)}&size=${encodeURIComponent(size)}`,
                    function (data) {
                        const priceSpan = document.getElementById(`price-${productName.replace(" ", "-")}`);
                        priceSpan.textContent = `$${parseFloat(data.price).toFixed(2)}`;
                    });
            }
        }

        function addToCart(productName) {
            const sizeSelect = document.getElementById(`sizeSelect-${productName.replace(" ", "-")}`);
            const size = sizeSelect.value;
            const priceElement = document.getElementById(`price-${productName.replace(" ", "-")}`);
            const priceText = priceElement.textContent;

            if (!size) {
                alert('Please select a size first');
                return;
            }

            cart.push({
                productName: productName,
                size: size,
                price: parseFloat(priceText.replace('$', ''))
            });

            updateCartCount();
            $(`#sizeModal-${productName.replace(" ", "-")}`).modal('hide');
        }

        function updateCartCount() {
            document.getElementById('cartCount').textContent = cart.length;
        }

        function showCart() {
            let cartHtml = '<table class="table"><thead><tr><th>Product</th><th>Size</th><th>Price</th><th>Actions</th></tr></thead><tbody>';

            cart.forEach((item, index) => {
                cartHtml += `
                                                <tr>
                                                    <td>${item.productName}</td>
                                                    <td>
                                                        <select class="form-control" onchange="updateCartItemSize(${index}, this.value)">
                                                            <option value="${item.size}">${item.size}</option>
                                                        </select>
                                                    </td>
                                                    <td>$${parseFloat(item.price).toFixed(2)}</td>
                                                    <td>
                                                        <button class="btn btn-danger btn-sm" onclick="removeFromCart(${index})">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            `;
            });

            cartHtml += '</tbody></table>';

            // Add payment mode and cash payment sections after the table
            cartHtml += `
                                    <div class="form-group mt-3">
                                        <label>Mode of Payment:</label>
                                        <select class="form-control" id="paymentMode" onchange="handlePaymentMode()">
                                            <option value="">Select payment mode...</option>
                                            <option value="cash">Cash</option>
                                            <option value="gcash">G-Cash</option>
                                        </select>
                                    </div>

                                    <div id="cashPaymentDiv" style="display:none;" class="mt-3">
                                        <div class="form-group">
                                            <label>Cash Amount:</label>
                                            <input type="number" class="form-control" id="cashAmount" onchange="calculateChange()">
                                        </div>
                                        <div class="form-group">
                                            <label>Change:</label>
                                            <input type="text" class="form-control" id="changeAmount" readonly>
                                        </div>
                                    </div>

                                    <div class="text-right mt-3">
                                        <button class="btn btn-primary" onclick="submitTransaction()">Submit Order</button>
                                    </div>
                                `;

            document.getElementById('cartItems').innerHTML = cartHtml;
            updateCartTotal();
            $('#cartModal').modal('show');

            // Load sizes for each item
            cart.forEach((item, index) => {
                $.get(`/Home/GetSizes?productName=${encodeURIComponent(item.productName)}`, function (sizes) {
                    const selects = document.querySelectorAll('#cartItems select');
                    selects[index].innerHTML = sizes.map(s =>
                        `<option value="${s.size}" ${s.size === item.size ? 'selected' : ''}>${s.size}</option>`
                    ).join('');
                });
            });
        }

        function removeFromCart(index) {
            if (confirm('Are you sure you want to remove this item from your cart?')) {
                cart.splice(index, 1);
                updateCartCount();
                showCart();
            }
        }

        function updateCartItemSize(index, newSize) {
            const item = cart[index];
            $.get(`/Home/GetPrice?productName=${encodeURIComponent(item.productName)}&size=${encodeURIComponent(newSize)}`,
                function (data) {
                    cart[index].size = newSize;
                    cart[index].price = parseFloat(data.price);
                    showCart();
                });
        }

        function updateCartTotal() {
            const total = cart.reduce((sum, item) => sum + parseFloat(item.price), 0);
            document.getElementById('cartTotal').textContent = parseFloat(total).toFixed(2);
        }

        function handlePaymentMode() {
            const paymentMode = document.getElementById('paymentMode').value;
            const cashPaymentDiv = document.getElementById('cashPaymentDiv');
            cashPaymentDiv.style.display = paymentMode === 'cash' ? 'block' : 'none';
        }

        function calculateChange() {
            const totalAmount = parseFloat(document.getElementById('cartTotal').textContent);
            const cashAmount = parseFloat(document.getElementById('cashAmount').value) || 0;
            const change = cashAmount - totalAmount;
            document.getElementById('changeAmount').value = change >= 0 ? change.toFixed(2) : '0.00';
        }

        function submitTransaction() {
            const paymentMode = document.getElementById('paymentMode').value;
            if (!paymentMode) {
                alert('Please select a payment mode');
                return;
            }

            const totalAmount = parseFloat(document.getElementById('cartTotal').textContent);
            let cashAmount = 0;
            let change = 0;

            if (paymentMode === 'cash') {
                cashAmount = parseFloat(document.getElementById('cashAmount').value);
                if (!cashAmount || cashAmount < totalAmount) {
                    alert('Please enter valid cash amount');
                    return;
                }
                change = cashAmount - totalAmount;
            }

            const transaction = {
                totalAmount: totalAmount,
                paymentMode: paymentMode,
                change: change,
                products: cart.map(item => ({
                    productName: item.productName,
                    size: item.size,
                    price: item.price // Added price to the products array
                }))
            };

            $.ajax({
                url: '/Home/SubmitTransaction',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(transaction),
                success: function (response) {
                    if (response.success) {
                        alert('Order submitted successfully! Order ID: ' + response.orderId);
                        cart = [];
                        updateCartCount();
                        $('#cartModal').modal('hide');
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function (error) {
                    alert('Error submitting transaction. Please try again.');
                    console.error('Error:', error);
                }
            });
        }
    </script>

</body>
