                            <a href="#" class="nav-link active">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Dashboard
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "Home")" class="nav-link active">
                                        <i class="far fa-circle nav-icon" id="index-icon"></i>
                                        <p>Summary Overview</p>
                                    </a>
                            </ul>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@product.ProductName</h5>
                                <p class="card-text">Price: <span id="price-@product.ProductName.Replace(" ", "-")">Select size first</span></p>
                                <button type="button" class="btn btn-primary" data-toggle="modal"
                                        data-target="#sizeModal-@product.ProductName.Replace(" ", "-")"
                                        onclick="loadSizes('@product.ProductName')">
                                    Select Size
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Size Selection Modal -->
                    <div class="modal fade" id="sizeModal-@product.ProductName.Replace(" ", "-")" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Select Size for @product.ProductName</h5>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>
                                <div class="modal-body">
                                    <select class="form-control" id="sizeSelect-@product.ProductName.Replace(" ", "-")"
                                            onchange="updatePrice('@product.ProductName')">
                                        <option value="">Choose size...</option>
                                    </select>
                                    <div class="mt-3">
                                        <button class="btn btn-success" onclick="addToCart('@product.ProductName')">
                                            Add to Cart
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Shopping Cart Modal -->
            <div class="modal fade" id="cartModal" tabindex="-1">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Shopping Cart</h5>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body">
                            <div id="cartItems"></div>
                            <div class="text-right">
                                <h4>Total: $<span id="cartTotal">0.00</span></h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>

        <!-- Shopping Cart Modal -->
        <div class="modal fade" id="cartModal" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Shopping Cart</h5>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div id="cartItems"></div>
                        <div class="text-right">
                            <h4>Total: $<span id="cartTotal">0.00</span></h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

 

        <!-- Cart Button -->
        <button class="btn btn-info position-fixed" style="bottom: 20px; right: 20px;"
                onclick="showCart()">
            <i class="fas fa-shopping-cart"></i> Cart (<span id="cartCount">0</span>)
        </button>


    </div>

    <!-- Size Selection Modal -->
    <div class="modal fade" id="sizeModal" tabindex="-1" role="dialog" aria-labelledby="sizeModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="sizeModalLabel">Select Size</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="sizeList">
                        <!-- Sizes will be populated here -->
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- Best Sellers Section -->
<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Best Sellers</h3>
                        </div>
                        <div class="card-body">
                            <div class="row" id="bestSellers">
                                @if (ViewBag.BestSellers != null)
                                {
                                    foreach (var product in ViewBag.BestSellers)
                                    {
                                        <div class="col-md-3 col-sm-6 col-12">
                                            <div class="info-box">
                                                <span class="info-box-icon bg-info">
                                                    <i class="fas fa-coffee"></i>
                                                </span>
                                                <div class="info-box-content">
                                                    <span class="info-box-text">@product.ProductName</span>
                                                    <span class="info-box-number">Ordered @product.OrderCount times</span>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="col-12">
                                        <p>No best sellers data available.</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


